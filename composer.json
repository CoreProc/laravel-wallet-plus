{
    "name": "coreproc/laravel-wallet-plus",
    "description": "Easily add a virtual wallet to your Laravel models. Features multiple wallets and a ledger system to help keep track of all transactions in the wallets.",
    "keywords": [
        "coreproc",
        "laravel-wallet-plus"
    ],
    "homepage": "https://github.com/coreproc/laravel-wallet-plus",
    "license": "MIT",
    "authors": [
        {
            "name": "Chris Bautista",
            "email": "chris.bautista@coreproc.ph",
            "homepage": "https://coreproc.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^12.0",
        "illuminate/database": "^12.0",
        "illuminate/contracts": "^12.0",
        "nesbot/carbon": "^3.0"
    },
    "require-dev": {
        "orchestra/testbench": "^10.0",
        "phpunit/phpunit": "^11.0",
        "symfony/var-dumper": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "CoreProc\\WalletPlus\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CoreProc\\WalletPlus\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "CoreProc\\WalletPlus\\WalletPlusServiceProvider"
            ]
        }
    }
}
